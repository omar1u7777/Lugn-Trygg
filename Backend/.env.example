# ============================================================
# Lugn & Trygg Backend - Environment Configuration Template
# ============================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ============================================================

# ‚öôÔ∏è App Configuration
PORT=5001
HOST=127.0.0.1
FLASK_APP=src.main:app
FLASK_DEBUG=False
FRONTEND_URL=http://localhost:3000

# üîê JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-chars
JWT_REFRESH_SECRET_KEY=your-jwt-refresh-secret-key-here-min-32-chars
JWT_EXPIRATION_MINUTES=1440
JWT_REFRESH_EXPIRATION_DAYS=360

# üåê CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# üî• Firebase Configuration
FIREBASE_CREDENTIALS=serviceAccountKey.json
FIREBASE_CREDENTIALS_PATH=serviceAccountKey.json
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project-id
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_WEB_API_KEY=your-firebase-web-api-key
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_APP_ID=1:000000000000:web:0000000000000000
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
FIREBASE_MESSAGING_SENDER_ID=000000000000

# üîë Firebase Service Account (from serviceAccountKey.json)
FIREBASE_TYPE=service_account
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=000000000000000000000

# üåê OAuth2 Configuration (standard - don't change)
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk%40your-project-id.iam.gserviceaccount.com

# üé§ Google Cloud APIs (Speech-to-Text)
GOOGLE_APPLICATION_CREDENTIALS=serviceAccountKey.json

# ü§ñ OpenAI API
# Get your key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# üìß Resend Email Service
# Get your key from: https://resend.com
RESEND_API_KEY=re_your-resend-api-key-here
RESEND_FROM_EMAIL=noreply@your-domain.com
RESEND_FROM_NAME=Lugn & Trygg

# üí≥ Stripe Payment Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_PRICE_ID=price_your-price-id
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# üîí HIPAA Compliance Encryption
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
HIPAA_ENCRYPTION_KEY=your-fernet-encryption-key-here

# üè• Health Integrations - Google Fit OAuth 2.0
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_FIT_CLIENT_ID=your-google-fit-client-id.apps.googleusercontent.com
GOOGLE_FIT_CLIENT_SECRET=your-google-fit-client-secret
GOOGLE_FIT_REDIRECT_URI=https://your-backend-url/api/integration/oauth/google_fit/callback
GOOGLE_FIT_SCOPES=https://www.googleapis.com/auth/fitness.activity.read,https://www.googleapis.com/auth/fitness.heart_rate.read,https://www.googleapis.com/auth/fitness.sleep.read,https://www.googleapis.com/auth/fitness.body.read

# üè• Health Integrations - Fitbit OAuth 2.0
# Get credentials from: https://dev.fitbit.com/apps
FITBIT_CLIENT_ID=your-fitbit-client-id
FITBIT_CLIENT_SECRET=your-fitbit-client-secret
FITBIT_REDIRECT_URI=https://your-backend-url/api/integration/oauth/fitbit/callback
FITBIT_SCOPES=activity heartrate sleep weight profile

# üè• Health Integrations - Samsung Health (optional)
# Get credentials from: https://developer.samsung.com/health
SAMSUNG_HEALTH_CLIENT_ID=your-samsung-health-client-id
SAMSUNG_HEALTH_CLIENT_SECRET=your-samsung-health-client-secret
SAMSUNG_HEALTH_REDIRECT_URI=https://your-backend-url/api/integration/oauth/samsung/callback

# üè• Health Integrations - Withings (optional)
WITHINGS_CLIENT_ID=your-withings-client-id
WITHINGS_CLIENT_SECRET=your-withings-client-secret
WITHINGS_REDIRECT_URI=https://your-backend-url/api/integration/oauth/withings/callback

# üìä Sentry Error Tracking & Performance Monitoring
# Get your DSN from: https://sentry.io (free tier: 5000 errors/month)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_RELEASE=lugn-trygg@1.0.0

# üóÑÔ∏è Redis Configuration (optional - for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=False
REDIS_MAX_CONNECTIONS=20

# üì¶ Cache Configuration
CACHE_DEFAULT_TIMEOUT=300
CACHE_API_RESPONSE_TIMEOUT=600
CACHE_USER_DATA_TIMEOUT=1800
