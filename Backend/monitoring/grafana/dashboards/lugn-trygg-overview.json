{
  "dashboard": {
    "id": null,
    "title": "Lugn & Trygg - System Overview",
    "tags": ["lugn-trygg", "overview"],
    "timezone": "Europe/Stockholm",
    "panels": [
      {
        "id": 1,
        "title": "System Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"lugn-trygg-api\"}",
            "legendFormat": "API Uptime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "orange", "value": 0.95 },
                { "color": "green", "value": 0.99 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "API Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"lugn-trygg-api\"}[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"lugn-trygg-api\"}[5m]))",
            "legendFormat": "50th percentile"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\", job=\"lugn-trygg-api\"}[5m]) / rate(http_requests_total{job=\"lugn-trygg-api\"}[5m]) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "orange", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "lugn_trygg_active_users",
            "legendFormat": "Active Users"
          }
        ]
      },
      {
        "id": 5,
        "title": "Database Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"lugntrygg_prod\"}",
            "legendFormat": "DB Connections"
          }
        ]
      },
      {
        "id": 6,
        "title": "Redis Memory Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "redis_memory_used_bytes / redis_memory_max_bytes * 100",
            "legendFormat": "Redis Memory %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 7,
        "title": "Mood Logs per Hour",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(lugn_trygg_mood_logs_total[1h])",
            "legendFormat": "Mood Logs"
          }
        ]
      },
      {
        "id": 8,
        "title": "Chatbot Interactions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(lugn_trygg_chatbot_interactions_total[1h])",
            "legendFormat": "Interactions"
          }
        ]
      },
      {
        "id": 9,
        "title": "Crisis Alerts",
        "type": "stat",
        "targets": [
          {
            "expr": "lugn_trygg_crisis_alerts_active",
            "legendFormat": "Active Alerts"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "orange", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Average Mood Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "lugn_trygg_average_mood_score",
            "legendFormat": "Average Mood"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 10,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "orange", "value": 4 },
                { "color": "yellow", "value": 6 },
                { "color": "green", "value": 8 }
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}