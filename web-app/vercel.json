{
  "version": 2,
  "name": "lugn-trygg-web",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://lugn-trygg-backend.onrender.com/api/$1"
    },
    {
      "src": "/static/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/(.*)",
      "headers": {
        "X-Frame-Options": "SAMEORIGIN",
        "X-Content-Type-Options": "nosniff",
        "Referrer-Policy": "strict-origin-when-cross-origin",
        "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://lugn-trygg-backend.onrender.com https://*.firebaseapp.com https://*.googleapis.com;"
      },
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "regions": ["fra1"],
  "env": {
    "VITE_API_URL": "https://lugn-trygg-backend.onrender.com",
    "VITE_FIREBASE_API_KEY": "@vite-firebase-api-key",
    "VITE_FIREBASE_AUTH_DOMAIN": "@vite-firebase-auth-domain",
    "VITE_FIREBASE_PROJECT_ID": "@vite-firebase-project-id",
    "VITE_FIREBASE_STORAGE_BUCKET": "@vite-firebase-storage-bucket",
    "VITE_FIREBASE_MESSAGING_SENDER_ID": "@vite-firebase-messaging-sender-id",
    "VITE_FIREBASE_APP_ID": "@vite-firebase-app-id"
  }
}
